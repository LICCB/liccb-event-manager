{# app/Resources/views/base.html.twig #}
{# Variables: page_title, stylesheet, body, javascript #}
<!DOCTYPE html>
<html lang="en">
	<head>

		<title>
			{% block page_title %}Default Page{% endblock %}
		</title>
		
		{% block head %}
		
			<meta charset="utf-8">
			<meta http-equiv = "X-UA-Compatible" content = "IE = edge">
			<meta name = "viewport" content = "width = device-width, initial-scale = 1">
		
			<!-- Latest compiled and minified CSS -->
			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

			<!-- jQuery library -->
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

			<!-- Latest compiled JavaScript -->
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		
			<!-- HTML5 shim and Respond.js for IE8 support of HTML5 
				elements and media queries -->
			<!-- WARNING: Respond.js doesn't work if you view the 
				page via file:// -->
      
			<!--[if lt IE 9]>
			<script src = "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src = "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
			<![endif]-->
			
		{% endblock %}
		
		{% block stylesheets %}
			{% stylesheets 'css/main.css' filter='cssrewrite' %}
			     <link href="{{ asset_url }}" rel="stylesheet" />
			{% endstylesheets %}
		{% endblock %}


	</head>
	<body>
	<div class = "container">
		<div class ="row">
			<div id="liccb_heading">
				<h1>LICCB Event Manager</h1>
			</div>
			<br>
			<hr>
		</div>
		<div class="row">
			<div id="content" class="col-xs-12 col-sm-10 col-md-11 col-lg-11">
				{% block body %}
				{% endblock %}
			</div>
		
			<div id="navBar" class="sidenav col-xs-12 col-sm-2 col-md-1 col-lg-1">
				<a href="/">View Events</a>
				<a href="/register">Register for Event</a>
				<a href="/registrants">Manage Registrants</a>
				<a href="/splash">Google Sign-in</a>
				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('admin_home') }}">Admin</a>
				{% endif %}
			</div>
		</div>
	</div>
	
    {% block javascript %}
    {% endblock %}
	
	</body>
	<footer>
	</footer>
</html>
